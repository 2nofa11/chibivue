{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "DOM"
    ],
    "strict": true,
    "paths": {
      "chibivue": [
        "./packages"
      ],
      "chibivue-store": [
        "./packages/@extensions/chibivue-store"
      ],
      "chibivue-router": [
        "./packages/@extensions/chibivue-router"
      ],
    },
    "types": [
      "vitest/importMeta",
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
  },
  "include": [
    "packages/**/*.ts",
    "example/**/**.ts",
    "example/**/**.vue",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}